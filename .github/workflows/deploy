name: Deploy Website to GitHub Pages

on:
  push:
    branches:
      - main # Change to 'master' if your main branch is called master

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout ğŸ›ï¸
        uses: actions/checkout@v4

      - name: Setup Node.js ğŸŸ©
        uses: actions/setup-node@v4
        with:
          node-version: 20

      - name: Install dependencies ğŸ“¦
        run: npm install

      # This runs the necessary compilation!
      - name: Build Project (Vite) âš™ï¸
        run: npm run build

      - name: Deploy to GitHub Pages ğŸš€
        uses: JamesIves/github-pages-deploy-action@v4
        with:
          branch: gh-pages # The branch where your pages is served from
          folder: dist # The folder produced by 'npm run build'
